<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    tools:context=".ProfileYearActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_centerVertical="true"
        tools:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF009688"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:text="Studiejaren" />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="15dp"
            android:elevation="1dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_centerVertical="true"
            tools:layout_centerHorizontal="true">

            <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonYear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Studiejaar 1"
                android:textColor="#FFF"
                app:backgroundTint="#FF009688"/>

            <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonYear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Studiejaar 2"
                android:textColor="#FFF"
                app:backgroundTint="#FF009688"/>

            <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonYear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Studiejaar 3"
                android:textColor="#FFF"
                app:backgroundTint="#FF009688"/>

            <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonYear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Studiejaar 4"
                android:textColor="#FFF"
                app:backgroundTint="#FF009688"/>

            <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonExtra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Keuzevakken"
                android:textColor="#FFF"
                app:backgroundTint="#FF009688"/>

        </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>